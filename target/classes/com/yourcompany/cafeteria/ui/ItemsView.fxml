<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" styleClass="content-area" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.ItemsController">
    <children>
        <Label styleClass="header-label" text="%items.header" />
        <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="200.0" text="%items.table.name" />
                <TableColumn fx:id="categoryColumn" prefWidth="150.0" text="%items.table.category" />
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="%items.table.price" />
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddItem" text="%items.button.add" />
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditItem" text="%items.button.edit" />
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteItem" text="%items.button.delete" />
            </children>
            <padding>
                <Insets top="10" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
