<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.UsersController">
    <top>
        <Label styleClass="view-title" text="User Management" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="usersTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Username" />
                <TableColumn fx:id="fullNameColumn" prefWidth="200.0" text="Full Name" />
                <TableColumn fx:id="roleIdColumn" prefWidth="100.0" text="Role ID" />
                <TableColumn fx:id="activeColumn" prefWidth="100.0" text="Active" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddUser" text="Add User" />
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEditUser" text="Edit User" />
                <Button fx:id="toggleActiveButton" mnemonicParsing="false" onAction="#handleToggleActive" text="Toggle Active" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
