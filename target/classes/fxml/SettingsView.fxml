<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.SettingsController"
      xmlns="http://javafx.com/javafx/21" spacing="15" style="-fx-padding: 20;">
    <children>
        <Label text="%settings.title" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="%settings.printer" minWidth="150"/>
                <ComboBox fx:id="printerCombo" prefWidth="350.0" promptText="%settings.selectPrinter"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Button fx:id="saveButton" text="%settings.save" onAction="#handleSaveSettings"/>
                <Button fx:id="testPrintButton" text="%settings.testPrint" onAction="#handleTestPrint"/>
            </children>
        </HBox>
        <Label fx:id="statusLabel" text=""/>
    </children>
</VBox>
