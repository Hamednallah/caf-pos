<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.ReportsController">
   <children>
      <TabPane layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="772.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
        <tabs>
          <Tab text="By Shift">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Select Shift:">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="shiftSelectorComboBox" layoutX="110.0" layoutY="12.0" prefWidth="150.0" />
                        <VBox layoutX="14.0" layoutY="50.0" prefHeight="450.0" prefWidth="300.0" spacing="10.0">
                           <children>
                              <Label fx:id="shiftReportTotalSalesLabel" text="Total Sales: -" />
                              <Label fx:id="shiftReportTotalDiscountsLabel" text="Total Discounts: -" />
                              <Label fx:id="shiftReportCashTotalLabel" text="Cash Total: -" />
                              <Label fx:id="shiftReportBankTotalLabel" text="Bank Total: -" />
                              <Label fx:id="shiftReportOrdersCountLabel" text="Orders Count: -" />
                              <Label fx:id="shiftReportTotalExpensesLabel" text="Total Expenses: -" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="By Date Range">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <DatePicker fx:id="dateFromPicker" layoutX="58.0" layoutY="14.0" />
                        <Label layoutX="14.0" layoutY="18.0" text="From:" />
                        <DatePicker fx:id="dateToPicker" layoutX="268.0" layoutY="14.0" />
                        <Label layoutX="240.0" layoutY="18.0" text="To:" />
                        <Button fx:id="generateDateRangeReportButton" layoutX="450.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleGenerateDateRangeReport" text="Generate Report" />
                        <VBox layoutX="14.0" layoutY="60.0" prefHeight="450.0" prefWidth="300.0" spacing="10.0">
                           <children>
                              <Label fx:id="dateRangeReportTotalSalesLabel" text="Total Sales: -" />
                              <Label fx:id="dateRangeReportOrdersCountLabel" text="Orders Count: -" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
