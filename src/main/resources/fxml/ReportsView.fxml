<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.ReportsController">
    <top>
        <Label text="Reports" styleClass="h1">
            <padding>
                <Insets left="10" top="10"/>
            </padding>
        </Label>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Daily Sales">
                    <content>
                        <BorderPane>
                            <top>
                                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                                    <Label text="Select Date:"/>
                                    <DatePicker fx:id="dailyDatePicker"/>
                                    <Button onAction="#handleGenerateDailyReport" text="Generate"/>
                                    <Button fx:id="exportDailyCsvButton" onAction="#handleExportDailyCsv" text="Export as CSV"/>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="dailyReportTable">
                                    <columns>
                                        <TableColumn fx:id="dailyItemNameCol" prefWidth="200" text="Item Name"/>
                                        <TableColumn fx:id="dailyQuantityCol" prefWidth="150" text="Quantity Sold"/>
                                        <TableColumn fx:id="dailySalesCol" prefWidth="150" text="Total Sales"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>
                <Tab text="Shift Report">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Shift ID:"/>
                                <TextField fx:id="shiftIdField" promptText="Enter Shift ID"/>
                                <Button onAction="#handleGenerateShiftReport" text="Generate"/>
                            </HBox>
                            <GridPane fx:id="shiftReportGrid" hgap="10" vgap="5" style="-fx-font-size: 14px;">
                                <padding>
                                    <Insets top="10"/>
                                </padding>
                            </GridPane>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Date Range Report">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="From:"/>
                                <DatePicker fx:id="fromDateDatePicker"/>
                                <Label text="To:"/>
                                <DatePicker fx:id="toDateDatePicker"/>
                                <Button onAction="#handleGenerateDateRangeReport" text="Generate"/>
                            </HBox>
                            <GridPane fx:id="dateRangeReportGrid" hgap="10" vgap="5" style="-fx-font-size: 14px;">
                                 <padding>
                                    <Insets top="10"/>
                                </padding>
                            </GridPane>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
