<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.ReportsController"
      xmlns="http://javafx.com/javafx/21" spacing="10" style="-fx-padding: 10;">
    <children>
        <Label text="Daily Sales Report" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Select Date:"/>
                <DatePicker fx:id="datePicker"/>
                <Button text="Generate Report" onAction="#handleGenerateReport"/>
            </children>
        </HBox>
        <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="itemNameCol" prefWidth="350.0" text="Item Name"/>
                <TableColumn fx:id="quantityCol" prefWidth="150.0" text="Total Quantity Sold"/>
                <TableColumn fx:id="salesCol" prefWidth="200.0" text="Total Sales"/>
            </columns>
        </TableView>
    </children>
</VBox>
