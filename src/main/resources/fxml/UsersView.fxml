<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.UsersController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <children>
                <Label text="%users.manage" styleClass="h1" />
                <Button onAction="#handleAddUser" text="%users.addNew" />
                <Button onAction="#handleEditUser" text="%users.edit" />
                <Button onAction="#handleDeactivateUser" text="%users.toggleStatus" />
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="usersTable">
            <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="150" text="%users.username" />
                <TableColumn fx:id="fullNameColumn" prefWidth="250" text="%users.fullName" />
                <TableColumn fx:id="roleColumn" prefWidth="100" text="%users.role" />
                <TableColumn fx:id="activeColumn" prefWidth="100" text="%users.active" />
            </columns>
        </TableView>
    </center>
</BorderPane>
