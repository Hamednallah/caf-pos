<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.UsersController">
   <children>
      <TableView fx:id="usersTable" layoutX="14.0" layoutY="50.0" prefHeight="536.0" prefWidth="772.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="50.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Username" />
            <TableColumn fx:id="fullNameColumn" prefWidth="200.0" text="Full Name" />
            <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
            <TableColumn fx:id="activeColumn" prefWidth="75.0" text="Active" />
        </columns>
      </TableView>
      <HBox layoutX="14.0" layoutY="14.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleAddUser" text="Add User" />
            <Button mnemonicParsing="false" onAction="#handleEditUser" text="Edit User" />
            <Button mnemonicParsing="false" onAction="#handleDeactivateUser" text="Deactivate/Reactivate" />
         </children>
      </HBox>
   </children>
</AnchorPane>
