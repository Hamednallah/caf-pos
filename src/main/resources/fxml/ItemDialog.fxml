<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="400">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="%items.dialog.name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="%items.dialog.description" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true" prefRowCount="3"/>

            <Label text="%items.dialog.price" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="%items.dialog.category" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="categoryComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="%items.dialog.imagePath" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <HBox spacing="5" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <TextField fx:id="imagePathField" HBox.hgrow="ALWAYS"/>
                <Button fx:id="browseButton" text="%items.dialog.browse"/>
            </HBox>

        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:id="saveButton" text="%items.dialog.save" buttonData="OK_DONE"/>
        <ButtonType text="%items.dialog.cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
