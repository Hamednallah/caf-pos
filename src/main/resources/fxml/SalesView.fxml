<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.SalesController">
    <left>
        <VBox prefWidth="200.0" spacing="10" style="-fx-padding: 10;">
            <children>
                <Label text="%sales.categories" styleClass="h2" />
                <ListView fx:id="categoryListView" prefHeight="200.0" />
                <TextField fx:id="searchField" promptText="%sales.search" />
            </children>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <TilePane fx:id="itemGridPane" hgap="10" vgap="10" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>
    </center>
    <right>
        <VBox prefWidth="300.0" spacing="10" style="-fx-background-color: -fx-surface; -fx-padding: 10;">
            <children>
                <Label text="%sales.cart" styleClass="h1" />
                <TableView fx:id="cartTable" prefHeight="400.0">
                    <columns>
                        <TableColumn fx:id="cartItemNameCol" prefWidth="150.0" text="%sales.item" />
                        <TableColumn fx:id="cartQuantityCol" prefWidth="50.0" text="%sales.qty" />
                        <TableColumn fx:id="cartPriceCol" prefWidth="75.0" text="%sales.total" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <children>
                        <Label text="%sales.discount" />
                        <TextField fx:id="discountField" prefWidth="100.0" />
                    </children>
                </HBox>
                <Label fx:id="totalLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="%sales.totalLabel" />
                <VBox spacing="5">
                    <children>
                        <Label text="%sales.paymentMethod" />
                        <ToggleGroup fx:id="paymentMethodToggleGroup">
                            <toggles>
                                <RadioButton fx:id="cashRadioButton" text="%sales.cash" selected="true" />
                                <RadioButton fx:id="bankRadioButton" text="%sales.bank" />
                            </toggles>
                        </ToggleGroup>
                    </children>
                </VBox>
                <Button fx:id="finalizeButton" onAction="#handleFinalize" text="%sales.confirmPayment" maxWidth="Infinity" style="-fx-font-size: 16px;" />
            </children>
        </VBox>
    </right>
</BorderPane>
