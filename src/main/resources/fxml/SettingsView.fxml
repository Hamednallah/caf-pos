<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.SettingsController"
      xmlns="http://javafx.com/javafx/21" spacing="15" style="-fx-padding: 20;">
    <children>
        <Label text="Application Settings" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Default Receipt Printer:" minWidth="150"/>
                <ComboBox fx:id="printerCombo" prefWidth="350.0" promptText="Select a printer"/>
            </children>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Button fx:id="saveButton" text="Save Settings" onAction="#handleSaveSettings"/>
                <Button fx:id="testPrintButton" text="Test Print" onAction="#handleTestPrint"/>
            </children>
        </HBox>
        <Label fx:id="statusLabel" text=""/>
    </children>
</VBox>
