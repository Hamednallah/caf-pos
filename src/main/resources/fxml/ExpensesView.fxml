<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.ExpensesController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <children>
                <Label text="Manage Expenses" styleClass="h1" />
                <Label fx:id="shiftInfoLabel" text="No active shift." />
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="expensesTable">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="descriptionCol" prefWidth="300.0" text="Description" />
                <TableColumn fx:id="amountCol" prefWidth="120.0" text="Amount" />
                <TableColumn fx:id="dateCol" prefWidth="200.0" text="Date" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <children>
                <Button fx:id="addExpenseButton" onAction="#handleAddExpense" text="Add Expense" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
