<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane hgap="10" vgap="10">
        <Label text="%users.table.username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="%users.table.fullName" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="%users.table.roleId" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="%users.table.active" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <CheckBox fx:id="activeCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>
    <ButtonBar>
        <buttons>
            <Button fx:id="saveButton" onAction="#handleSave" text="%button.save" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="%button.cancel" />
        </buttons>
    </ButtonBar>
</VBox>
