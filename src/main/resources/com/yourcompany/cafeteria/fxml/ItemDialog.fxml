<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<DialogPane prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <Label text="%items.dialog.name" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="%items.dialog.category" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ComboBox fx:id="categoryComboBox" editable="true" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="%items.dialog.price" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </content>
    <buttonTypes>
        <Button fx:id="saveButton" text="%button.save" buttonData="OK_DONE" />
        <Button fx:id="cancelButton" text="%button.cancel" buttonData="CANCEL_CLOSE" />
    </buttonTypes>
</DialogPane>
