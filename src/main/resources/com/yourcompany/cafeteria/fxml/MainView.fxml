<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1366.0" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourcompany.cafeteria.ui.MainController">
   <left>
      <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="app-title" text="%app.title" />
            <VBox fx:id="menuContainer" VBox.vgrow="ALWAYS">
               <children>
                  <ToggleButton fx:id="salesButton" mnemonicParsing="false" onAction="#handleSales" text="%main.menu.sales">
                     <toggleGroup>
                        <ToggleGroup fx:id="menuToggleGroup" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="itemsButton" mnemonicParsing="false" onAction="#handleItems" text="%main.menu.items" toggleGroup="$menuToggleGroup" />
                  <ToggleButton fx:id="shiftsButton" mnemonicParsing="false" onAction="#handleShifts" text="%main.menu.shifts" toggleGroup="$menuToggleGroup" />
                  <ToggleButton fx:id="expensesButton" mnemonicParsing="false" onAction="#handleExpenses" text="%main.menu.expenses" toggleGroup="$menuToggleGroup" />
                  <ToggleButton fx:id="reportsButton" mnemonicParsing="false" onAction="#handleReports" text="%main.menu.reports" toggleGroup="$menuToggleGroup" />
                  <ToggleButton fx:id="usersButton" mnemonicParsing="false" onAction="#handleUsers" text="%main.menu.users" toggleGroup="$menuToggleGroup" />
                   <ToggleButton fx:id="settingsButton" mnemonicParsing="false" onAction="#handleSettings" text="%main.menu.settings" toggleGroup="$menuToggleGroup" />
               </children>
            </VBox>
             <VBox alignment="CENTER_LEFT" spacing="5.0">
                 <children>
                     <Label fx:id="currentUserLabel" styleClass="sidebar-info-label" text="User: -" />
                     <Label fx:id="shiftStatusLabel" styleClass="sidebar-info-label" text="Shift: Inactive" />
                 </children>
             </VBox>
            <ComboBox fx:id="languageComboBox" prefWidth="150.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="mainContent" styleClass="main-content" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
